version: '3.9'

volumes:
  pg_data:
  static:
  media:

services:
  db:
    image: postgres:13
    container_name: db
    env_file: .env
    volumes:
      - pg_data:/var/lib/postgresql/data

  backend:
    image: ${{ secrets.DOCKERHUB_USERNAME }}/kittygram_backend:latest
    container_name: backend
    env_file: .env
    volumes:
      - static:/app/static
      - media:/app/media
    depends_on:
      - db

  frontend:
    image: ${{ secrets.DOCKERHUB_USERNAME }}/kittygram_frontend:latest
    container_name: frontend
    volumes:
      - static:/static

  gateway:
    image: ${{ secrets.DOCKERHUB_USERNAME }}/kittygram_gateway:latest
    container_name: gateway
    ports:
      - "9000:80"
    volumes:
      - static:/static
      - media:/media
    depends_on:
      - backend
      - frontend
